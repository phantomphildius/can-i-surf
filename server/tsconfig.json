{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist/",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/types/*.ts", "node_modules", ".vscode", "src/testing/*", "src/**/*.test.ts"]
}
